<%= form_tag({controller: 'flights', action: 'search'}, method: 'post', remote: true) do %>
  <div class="form-group form-group-lg">
    <select class="form-control  transparent-input" id="flightFrom" name="from" placeholder="Where are you?">
      <option>Departure City</option>
      <%= @airports.each do |airport| %>
      <option value="<%= airport.id %>"><%= airport.city.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group form-group-lg">
    <select class="form-control  transparent-input" id="flightTo" name="to" placeholder="Where are you?">
      <option>Destination City</option>
      <%= @airports.each do |airport| %>
      <option value="<%= airport.id %>"><%= airport.city.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group form-group-lg">
    <div class="input-group">
      <input id="date-picker" type="date" name="date" class="date-picker form-control transparent-input" />
      <label for="date-picker" class="input-group-addon btn"><span class="glyphicon glyphicon-calendar"></span>
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-default btn-lg btn-block" id="search-submit">Search Flights</button>
<% end %>

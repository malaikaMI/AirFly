<section id="intro" data-speed="6" data-type="background">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-sm-12 pull-right well">
          <div class="page-header">
            <h3>Sign in</h3>
          </div>
          <% flash.each do |name, msg| %>
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Error!</strong> <%= msg %>
          </div>
          <% end %>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "col-sm-2 control-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email", id:"login-email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "col-sm-2 control-label" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password", id:"login-password" %>
            </div>

            <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <div class="checkbox">
                <label>
                  <%= f.check_box :remember_me %> Remember me
                </label>
              </div>
            </div>
            <% end -%>

            <div class="form-group">
              <%= f.submit "Log in", class: "btn btn-default btn-lg" %>
            </div>

        <% end %>

        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
</section>
